{
  "info": {
    "name": "TaskFlow API",
    "description": "Complete API collection for TaskFlow application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:5000/api" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/register",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Alex Johnson\",\n  \"email\": \"alex@example.com\",\n  \"password\": \"secure123\"\n}"
            }
          },
          "event": [{
            "listen": "test",
            "script": {
              "exec": [
                "const res = pm.response.json();",
                "if (res.token) pm.collectionVariables.set('token', res.token);",
                "pm.test('Status 201', () => pm.response.to.have.status(201));",
                "pm.test('Has token', () => pm.expect(res.token).to.be.a('string'));"
              ]
            }
          }]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/login",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"alex@example.com\",\n  \"password\": \"secure123\"\n}"
            }
          },
          "event": [{
            "listen": "test",
            "script": {
              "exec": [
                "const res = pm.response.json();",
                "if (res.token) pm.collectionVariables.set('token', res.token);",
                "pm.test('Status 200', () => pm.response.to.have.status(200));",
                "pm.test('Has token', () => pm.expect(res.token).to.be.a('string'));"
              ]
            }
          }]
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/auth/me",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/users/profile",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "url": "{{base_url}}/users/profile",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Alex J.\",\n  \"bio\": \"Full-stack developer & coffee enthusiast\"\n}"
            }
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "PUT",
            "url": "{{base_url}}/users/password",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"secure123\",\n  \"newPassword\": \"newSecure456\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Get Stats",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/tasks/stats",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "List Tasks",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/tasks?page=1&limit=20&sortBy=createdAt&order=desc",
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "20" },
                { "key": "sortBy", "value": "createdAt" },
                { "key": "order", "value": "desc" }
              ]
            },
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Filter Tasks by Status",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/tasks?status=todo",
              "query": [{ "key": "status", "value": "todo" }]
            },
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Search Tasks",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/tasks?search=dashboard",
              "query": [{ "key": "search", "value": "dashboard" }]
            },
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/tasks",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Build the login page\",\n  \"description\": \"React form with JWT integration\",\n  \"status\": \"in-progress\",\n  \"priority\": \"high\",\n  \"tags\": [\"frontend\", \"auth\"],\n  \"dueDate\": \"2024-12-25\"\n}"
            }
          },
          "event": [{
            "listen": "test",
            "script": {
              "exec": [
                "const res = pm.response.json();",
                "if (res.task?._id) pm.collectionVariables.set('task_id', res.task._id);",
                "pm.test('Status 201', () => pm.response.to.have.status(201));"
              ]
            }
          }]
        },
        {
          "name": "Update Task",
          "request": {
            "method": "PUT",
            "url": "{{base_url}}/tasks/{{task_id}}",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Build the login page\",\n  \"status\": \"done\",\n  \"priority\": \"high\"\n}"
            }
          }
        },
        {
          "name": "Delete Task",
          "request": {
            "method": "DELETE",
            "url": "{{base_url}}/tasks/{{task_id}}",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        }
      ]
    },
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/health"
          }
        }
      ]
    }
  ]
}
